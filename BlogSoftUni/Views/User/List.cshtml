@model List<BlogSoftUni.Models.ApplicationUser>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2 style="color: #fff" >Users</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="color: #ffF">ID</th>
                    <th style="color: #ffF">Email</th>
                    <th style="color: #ffF">Actions</th>
                </tr>
            </thead>

            <tbody>
              @foreach (var user in Model)
              {
                  if (ViewBag.Admins.Contains(user.UserName))
                  {
                    @:<tr class="info">
                    }
                  else
                  {
                    @:<tr>
                   }


                <td style="color: #000; ">@user.Id</td>
                <td style="color: #000; ">@user.Email</td>
                <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { @id = user.Id }, null)
                        @Html.ActionLink("Delete", "Delete", "User", new { @id = user.Id }, null)
                    </td>
}

</tbody>
        </table>
    </div>
</div>
