@model List<BlogSoftUni.Models.Category>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2 style="color:#fff">All Categories - @Html.ActionLink("Create", "Create", "Category", null, new { @class = "btn btn-success" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th style="color:#fff">#</th>
                        <th style ="color:#fff">Name</thstyle>
                        <th style="color:#fff">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Category", new { @id = category.Id}, null)
                                @Html.ActionLink("Delete", "Delete", "Category", new { @id = category.Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
